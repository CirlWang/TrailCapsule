/**index.wxss**/
.topbox {
  display: flex;
  flex-direction: row;  
  height: 110rpx;
  width: 100%;	
  justify-content: space-between;
  background-color: aqua;
}

.topbox-backbtn {
  width:20%;
  height: 80%;
  font-size: 20px; 
  align-self: center;
  border-style: double;
  border-color: black;
}

.topbox-title {
  width:auto; 
  height: 80%;
  font-size: 23px; 
  border-style: double;
  border-color: black;
  align-self: center;
  line-height: 80rpx;
}

.scrollview {
  height: 800rpx;
  width: 100%;
  text-align: center;
  display: inline-block;
  justify-content: center;
  border-style: double;
  border-color: blue;
}

.scrollview-item {
  width: 80%;
  margin-top: 10rpx;
  margin-left: 10%;
  margin-right: 10%;
  display: flex;
  flex-direction: column;
  border-style: double;
  border-color: blue;
}

.scrollview-item-part1 {
  width: 80%;
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: 10%;
  margin-right: 10%;
  display: flex;
  justify-content: space-between;
  border-style: double;
  border-color: blue;
}

.scrollview-item-part2 {
  width: 70%;
  font-size: 12px;
  text-align: left;
  margin-left: 15%;
  margin-right: 15%;
  display: flex;
  flex-direction: column;
  border-style: double;
  border-color: blue;
}

.scrollview-item-part2-des {
  font-size: 12px;
  text-align: left;
  border-style: double;
  border-color: blue;
}

.scrollview-item-part2-nav {
  font-size: 12px;
  text-align: right;
  margin-left: 80%;
  border-style: double;
  border-color: blue;
}

.scrollview-item-left {
  margin-left: 20rpx;
  width:50rpx;
  border-style: double;
  border-color: black;
}

.scrollview-item-middle {
  border-style: double;
  border-color: black;
}

.scrollview-item-right {
  margin-right: 20rpx;
  width:50rpx;
  border-style: double;
  border-color: black;
}

.scrollview-item-bottom {
  height: 100rpx;
  width: 50%;
  margin-top: 10rpx;
  margin-left: 25%;
  margin-right: 25%;
  display: flex;
  justify-content: center;
  border-style: double;
  border-color: blue;
}

.add-item-btn { 
  width: 150rpx;
  height: 150rpx;
  margin-top: 10px;
  line-height: 120rpx;
  font-size: 30px;
  border-style: double;
  border-color: black;
}