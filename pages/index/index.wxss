/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  
}

.userinfo-nickname {
  color: #aaa;
}

.topbox {
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;	
}

.topbox-button{
  width:50%; 
  height:100%; 
  display: inline-block;
  align-items: center;
  justify-content: center;
}

.scrollview {
  height: 800rpx;
  width: 100%;
  margin-top:50rpx;  	
  text-align: center;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.scrollview-item {
  height: 16%;
  width: 80%;
  display: inline-block;
}

.scrollview-item-btn {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

